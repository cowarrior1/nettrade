<div class="row">
  <div class="col-sm-12 col-lg-12">
    <div class="jumbotron">
      <form id="uploadForm"
      role="form"
      enctype="multipart/form-data"
      data-toggle="validator"
      action="/api/file"
      method="post">

      <div class="form-group">
        <label for="exampleInputEmail1">Product name</label>
        <input type="text" class="form-control" name="product_name" placeholder="Product Name" data-error="Please Input Product Name" required>
        <div class="help-block with-errors">
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Product Description</label>
        <input type="text" class="form-control" name="product_description" placeholder="Describe your product" data-error="Please Input Product Description" required>
        <div class="help-block with-errors">
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Price</label>
        <input type="text" pattern="^\d+\.\d{2}" class="form-control" name="price" placeholder="Enter Price" pattern-error="Please input a valid price" required>
        <div class="help-block with-errors">
          Example 42.00
        </div>
      </div>



      <div class="form-group">
        <label for="exampleInputPassword1">Category</label><br>
        <select class="selectpicker" name= "categories">
          <option>default</option>
          <optgroup label="Electronics">
            <option value="Electronics">Cellphone</option>
            <option value="Electronics">Desktop/Laptop</option>
            <option value="Electronics">Bluetooth & Accessories</option>
            <option value="Electronics">Camera, Photo & Video</option>
            <option value="Electronics">Video Games</option>
            <option value="Electronics">Software</option>
            <option value="Electronics">Printers & ink</option>
            <option value="Electronics">Networking</option>
            <option value="Electronics">Others</option>
          </optgroup>
          <optgroup label="Clothes">
            <option value="Clothes">Top</option>
            <option value="Clothes">Botton</option>
            <option value="Clothes">Dress</option>
            <option value="Clothes">Shoes</option>
            <option value="Clothes">Bag </option>
            <option value="Clothes" > Jewelry</option> <option value="Clothes" > Other</option>
          </optgroup>
          <optgroup label="Home" >
            <option value="Home">Home Deco</option>
            <option value="Home">Furniture</option>
            <option value="Home">Kitchen & Dining</option>
            <option value="Home">Bedding & Bath</option>
            <option value="Home">Garden Deco & Tools</option>
            <option value="Home">Appliance</option>
            <option value="Home">Lights & Lamps</option>
            <option value="Home">Other</option>
          </optgroup>
          <optgroup label="Others">
          </optgroup>
        </select>
      </div>

      <div class="form-group">
        <label for="exampleInputFile">Product Image</label>
        <input type="file" name="product_image" / required>
        <div class="help-block with-errors">
        </div>
      </div>
      <input type="submit" value="Upload Product" name="submit">
    </form>


  </div>
</div>
</div>
